    <behaviors:Interaction.Behaviors>
        <!--윈도우를 이동시키는 Behavior-->
        <coreBehaviors:DragWindowBehavior />
    </behaviors:Interaction.Behaviors>
    
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded">
            <prism:InvokeCommandAction Command="{Binding LoadedWindowCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <buttons:ImageButton CornerRadius="0"
                                     Background="Transparent"
                                     Text="오테크"
                                     TextPadding="6.2 0 0 0"
                                     ImageWidth="24"
                                     ImageHeight="24"
                                     FontSize="18"
                                     FontWeight="DemiBold"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     IsHitTestVisible="False"
                                     ImageSource="{StaticResource popupCashLogo}"
                                     Margin="15 0 0 0">
                </buttons:ImageButton>
            </Grid>
            <Grid Grid.Column="1">
                <StackPanel x:Name="stackPaneluserName" Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Visibility="{Binding IsMember, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}"
                            Margin="0 0 20 0">
                    <buttons:ImageButton Text="{Binding User.Name}"
                                         FontSize="15"
                                         FontWeight="Bold"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center">
                    </buttons:ImageButton>
                    <TextBlock Text=" 님"
                               FontSize="15"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </StackPanel>

                <buttons:ImageButton Text="로그인/회원가입"
                                     TextPadding="0"
                                     FontSize="15"
                                     Margin="0 0 20 0"
                                     FontWeight="Bold"
                                     CornerRadius="15"
                                     HorizontalContentAlignment="Right"
                                     VerticalContentAlignment="Center"                                     
                                     Command="{Binding GotoLoginDialogCommand}"
                                     IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanToInverseBooleanConverter}}"
                                     Visibility="{Binding IsMember, Converter={StaticResource InverseBooleanToVIsibilityConverter}}">
                    <buttons:ImageButton.Style>
                        <Style TargetType="{x:Type buttons:ImageButton}">
                            <Setter Property="FontFamily"
                                    Value="/PopupCash.Core;Component/Resources/Fonts/#SUIT" />
                            <Setter Property="Focusable"
                                    Value="False" />
                        </Style>
                    </buttons:ImageButton.Style>
                </buttons:ImageButton>

            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical"
                                Margin="40 0 30 0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="15"
                                       Text="적립 가능"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center" />
                            <Image Source="{StaticResource pointImage}"
                                   Width="19"
                                   Height="18" 
                                   Margin="3 0 0 0"/>
                        </StackPanel>
                        <buttons:ImageButton Text="{Binding User.MissionPoint, Converter={StaticResource MissionPointToStringConverter}}"
                                             TextPadding="0"
                                             Foreground="{StaticResource textPoint}"
                                             FontSize="40"
                                             FontWeight="ExtraBold"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch"
                                             Padding="0"
                                             Command="{Binding GotoAccumulateCommand}" />
                        <!--<TextBlock FontSize="40"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontWeight="ExtraBold"
                                   >
                            <Run Text="{Binding User.MissionPoint, Converter={StaticResource MissionPointToStringConverter}}"
                                 Foreground="{StaticResource textPoint}" />
                        </TextBlock>-->
                    </StackPanel>
                    
                </Grid>
                <Grid Grid.Column="1">

                    <Button Margin="0 20 46 0"                            
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Transparent"
                            Focusable="False"
                            BorderThickness="0"
                            Command="{Binding GotoAccumulateCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                    <Viewbox Width="10"
                                             Height="20"
                                             Stretch="Uniform">
                                        <Path 
                                              Stroke="{StaticResource textPoint}"
                                              StrokeThickness="1.6"
                                              Data="M 0,0 L 10,10 L 0,20" />
                                    </Viewbox>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>                    
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <buttons:ImageButton CornerRadius="14"
                                     Width="200"
                                     Height="30"
                                     Text="{Binding User.Cash, Converter={StaticResource CashToStringConverter}}"
                                     TextPadding="5 0 0 0"
                                     Foreground="White"
                                     ImageOrientation="Horizontal"
                                     ImageWidth="23"
                                     ImageHeight="23"
                                     ImageSource="/PopupCash.Main;Component/Resources/Images/mainPoint.png"
                                     FontSize="15"
                                     HorizontalAlignment="Left"
                                     VerticalContentAlignment="Top"
                                     HorizontalContentAlignment="Left"
                                     Margin="15 0 0 0"
                                     Padding="5"
                                     Command="{Binding GotoAccumulateHistoryCommand}">
                    <buttons:ImageButton.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,1">
                            <GradientStop Offset="0"
                                          Color="{StaticResource GotoAccumulateFirstGradiention}" />
                            <GradientStop Offset="1"
                                          Color="{StaticResource GotoAccumulateSecondGradiention}" />
                        </LinearGradientBrush>
                    </buttons:ImageButton.Background>
                </buttons:ImageButton>


                <buttons:ImageButton CornerRadius="0"
                                     Background="Transparent"
                                     ImageSource="{StaticResource npayLogo}"
                                     ImageWidth="59"
                                     ImageHeight="20"
                                     ImageOrientation="Horizontal"
                                     Text="교환하기"
                                     TextPadding="4 0 0 0"
                                     FontSize="13"
                                     Foreground="{StaticResource textNaverExchange}"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Center"
                                     Margin="32 0 15 0"
                                     Command="{Binding GotoExchangeNeverPayCommand}">
                </buttons:ImageButton>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
