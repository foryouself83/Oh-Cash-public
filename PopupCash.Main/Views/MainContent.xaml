            <mainConverters:CashToStringConverter x:Key="CashToStringConverter" />
            <mainConverters:MissionPointToStringConverter x:Key="MissionPointToStringConverter" />
            <converters:BooleanToInverseBooleanConverter x:Key="BooleanToInverseBooleanConverter" />
            <converters:EmptyStringToBooleanConverter x:Key="EmptyStringToBooleanConverter" />
            <converters:PointToStringConverter x:Key="PointToStringConverter" />

